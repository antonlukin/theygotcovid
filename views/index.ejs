<!doctype html>
<html>
<%- include('parts/header', {title: __('title-index')}) %>

<body>
    <header class="header">
        <nav class="menu">
            <a class="menu-link menu-current" href="/<%= locale %>/"><%= __('menu-all') %></a>
            <a class="menu-link" href="/<%= locale %>/recovered/"><%= __('menu-recovered') %></a>
            <a class="menu-link" href="/<%= locale %>/dead/"><%= __('menu-dead') %></a>

            <a class="menu-select" href="/<%= locale %>/suggest/"><%= __('menu-suggest') %></a>
        </nav>

        <h1 class="title"><%- __('header-title') %></h1>
    </header>

    <section class="swiper">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <% items.forEach(function(item) { %>
                    <%- include('parts/item', {item: item}); %>
                <% }); %>
            </div>
        </div>

        <div class="swiper-button swiper-next"></div>
        <div class="swiper-button swiper-prev"></div>
    </section>

    <%- include('parts/footer') %>

    <script src="/scripts/swiper.min.js"></script>
    <script src="/scripts/custom.min.js?v=<%= version %>"></script>

    <%- include('parts/analytics') %>
</body>
</html>